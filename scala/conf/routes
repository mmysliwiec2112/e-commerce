# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET           /                                              controllers.HomeController.index

# CRUD for the product
GET           /product                                       controllers.ProductController.getAll
PUT           /product/edit/:productId/:productPrice         controllers.ProductController.updateProduct(productId: Int, productPrice: Int)
DELETE        /product/delete/:productId                     controllers.ProductController.delete(productId: Int)
POST          /product/add                                   controllers.ProductController.addNewProduct

# CRUD for the cart
GET           /cart                                          controllers.ProductController.getAll
PUT           /cart/edit/:productId/:productPrice            controllers.ProductController.updateProduct(productId: Int, productPrice: Int)
DELETE        /cart/delete/:productId                        controllers.ProductController.delete(productId: Int)
POST          /cart/add                                      controllers.ProductController.addNewProduct

# CRUD for the shopping category
GET           /category                                      controllers.ProductController.getAll
PUT           /category/edit/:productId/:productPrice        controllers.ProductController.updateProduct(productId: Int, productPrice: Int)
DELETE        /category/delete/:productId                    controllers.ProductController.delete(productId: Int)
POST          /category/add                                  controllers.ProductController.addNewProduct

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                                  controllers.Assets.versioned(path="/public", file: Asset)
